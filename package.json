{
  "name": "setup-hk",
  "version": "0.0.0",
  "private": true,
  "description": "An action that installs dependencies for HK mods from modlinks",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "rimraf dist",
    "build": "tsc",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "package": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "all": "npm run build && npm run lint:fix && npm run lint && npm test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadMagic100/setup-hk.git"
  },
  "keywords": [
    "actions",
    "setup"
  ],
  "author": "BadMagic100",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/io": "^3.0.2",
    "@actions/tool-cache": "^4.0.0",
    "fast-xml-parser": "^5.3.4",
    "queue-typescript": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@vercel/ncc": "^0.38.4",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.13.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.1",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
